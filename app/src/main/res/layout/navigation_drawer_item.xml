<?xml version="1.0" encoding="utf-8"?>

<bp.jellena.shopify.ui.navigationdrawer.NavigationDrawerItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRR"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_personal_data_layout_height"
    android:background="@drawable/navigation_drawer_list_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/default_small_padding">

    <ImageView
        android:id="@+id/navigationDrawerItemIconIV"
        android:layout_width="@dimen/navigation_drawer_image_view_size"
        android:layout_height="@dimen/navigation_drawer_image_view_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_small_padding"
        android:contentDescription="@string/content_description"
        android:visibility="gone" />

    <TextView
        android:id="@+id/navigationDrawerItemTitleTV"
        style="@style/Wrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/navigationDrawerItemIconIV"
        android:text="@string/app_name"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal" />
</bp.jellena.shopify.ui.navigationdrawer.NavigationDrawerItemView>
