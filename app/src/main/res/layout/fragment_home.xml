<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match"
    android:animateLayoutChanges="true">

    <GridView
        android:id="@+id/frag_home_category_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_small_padding"
        android:animateLayoutChanges="true"
        android:columnWidth="@dimen/frag_home_category_grid_column_width"
        android:gravity="center"
        android:horizontalSpacing="@dimen/default_small_padding"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/default_small_padding" />

    <LinearLayout
        android:id="@+id/frag_home_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/default_small_padding"
            android:text="@string/tutorial_home_title"
            android:textColor="@color/purple_dark"
            android:textSize="@dimen/tutorial_title_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/default_small_padding"
            android:text="@string/tutorial_home_text"
            android:textColor="@color/purple_light"
            android:textSize="@dimen/tutorial_text_size" />
    </LinearLayout>
</RelativeLayout>